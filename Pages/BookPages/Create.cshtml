@page
@model Library.Pages.BookPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить книгу</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
               @* <label class="form-check-label">
                    <input class="form-check-input" asp-for="Book.IsDeleted" /> @Html.DisplayNameFor(model => model.Book.IsDeleted)
                </label>*@
            </div>
            <div class="form-group">
                <label asp-for="Book.Name" class="control-label">Название</label>
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Author" class="control-label">Автор</label>
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Publisher" class="control-label">Издание</label>
                <input asp-for="Book.Publisher" class="form-control" />
                <span asp-validation-for="Book.Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PablicationYear" class="control-label">Год издания</label>
                <input asp-for="Book.PablicationYear" type="date" class="form-control" />
                <span asp-validation-for="Book.PablicationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Cost" class="control-label">Цена</label>
                <input asp-for="Book.Cost" class="form-control" />
                <span asp-validation-for="Book.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-primary mt-3" />
                <a asp-page="Index" class="text-decoration-none btn btn-outline-dark mt-3">Назад</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
