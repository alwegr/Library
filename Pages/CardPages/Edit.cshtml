@page
@model Library.Pages.CardPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Card.Id" />
            <div class="form-group">
                <label asp-for="Card.DateStart" class="control-label"></label>
                <input asp-for="Card.DateStart" class="form-control" />
                <span asp-validation-for="Card.DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.DateEnd" class="control-label">Дата выдачи</label>
                <input asp-for="Card.DateEnd" type="date" class="form-control" />
                <span asp-validation-for="Card.DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.BookId" class="control-label">Дата возврата</label>
                <select asp-for="Card.BookId" type="date" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="Card.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.ReaderId" class="control-label">Читатель</label>
                <select asp-for="Card.ReaderId" class="form-control" asp-items="ViewBag.ReaderId"></select>
                <span asp-validation-for="Card.ReaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.LibrarianId" class="control-label">Библиотекарь</label>
                <select asp-for="Card.LibrarianId"  class="form-control" asp-items="ViewBag.LibrarianId"></select>
                <span asp-validation-for="Card.LibrarianId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-primary mt-3" />
                <a asp-page="./Index" class="text-decoration-none btn btn-outline-dark mt-3">Назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
