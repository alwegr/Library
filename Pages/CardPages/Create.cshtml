@page
@model Library.Pages.CardPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить карту</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Card.DateStart" class="control-label">Дата выдачи</label>
                <input asp-for="Card.DateStart" type="date" class="form-control" />
                <span asp-validation-for="Card.DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.DateEnd" class="control-label">Дата возврата</label>
                <input asp-for="Card.DateEnd" type="date" class="form-control" />
                <span asp-validation-for="Card.DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.BookId" class="control-label">Книга</label>
                <select asp-for="Card.BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            @*<div class="form-group">
                <label asp-for="Card.BookId" class="control-label">Книга</label>
                <select asp-for="Card.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
            </div>*@
            <div class="form-group">
                <label asp-for="Card.ReaderId" class="control-label">Читатель</label>
                <select asp-for="Card.ReaderId" class ="form-control" asp-items="ViewBag.ReaderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Card.LibrarianId" class="control-label">Библиотекарь</label>
                <select asp-for="Card.LibrarianId" class ="form-control" asp-items="ViewBag.LibrarianId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-primary" />
                <a asp-page="Index" class="text-decoration-none btn btn-outline-dark">Назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
