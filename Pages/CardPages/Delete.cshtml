@page
@model Library.Pages.CardPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить карту</h1>

<h3>Вы уверены, что хотите удалить?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата выдачи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.DateStarthAsString)
        </dd>
        <dt class="col-sm-2">
            Дата возврата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.DateEndAsString)
        </dd>
        <dt class="col-sm-2">
           Книга
        </dt>
        <dd class="col-sm-10">
            Автор
        </dd>
        <dt class="col-sm-2">
            Читатель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.Readers.FirstName)
        </dd>
        <dt class="col-sm-2">
            Библиотекарь
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.Librarians.FirstName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Card.Id" />
        <input type="submit" value="Удалить" class="text-decoration-none btn btn-outline-danger" /> 
        <a asp-page="./Index" class="text-decoration-none btn btn-outline-dark">Назад</a>
    </form>
</div>
