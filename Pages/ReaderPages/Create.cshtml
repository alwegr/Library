@model Library.Pages.ReaderPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить читателя</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           @* <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Reader.IsDeleted" /> @Html.DisplayNameFor(model => model.Reader.IsDeleted)
                </label>
            </div>*@
            <div class="form-group">
                <label asp-for="Reader.LastName" class="control-label">Фамилия</label>
                <input asp-for="Reader.LastName" class="form-control" />
                <span asp-validation-for="Reader.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.FirstName" class="control-label">Имя</label>
                <input asp-for="Reader.FirstName" class="form-control" />
                <span asp-validation-for="Reader.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Middle" class="control-label">Фамиля</label>
                <input asp-for="Reader.Middle" class="form-control" />
                <span asp-validation-for="Reader.Middle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Login" class="control-label">Логин</label>
                <input asp-for="Reader.Login" class="form-control" />
                <span asp-validation-for="Reader.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Password" class="control-label">Пароль</label>
                <input asp-for="Reader.Password" class="form-control" type="password" />
                <span asp-validation-for="Reader.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Passport" class="control-label">Паспорт</label>
                <input asp-for="Reader.Passport" class="form-control" />
                <span asp-validation-for="Reader.Passport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Phone" class="control-label">Телефон</label>
                <input asp-for="Reader.Phone" class="form-control" />
                <span asp-validation-for="Reader.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.CardReaderId" class="control-label"></label>
                <input asp-for="Reader.CardReaderId" class="form-control" />
                <span asp-validation-for="Reader.CardReaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-primary mt-3" />
                <a asp-page="Index" class="text-decoration-none btn btn-outline-dark mt-3">Назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
