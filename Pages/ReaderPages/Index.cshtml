@page
@model Library.Pages.ReaderPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Читатели</h1>

<p>
    <a asp-page="Create" class="text-decoration-none btn btn-outline-dark">Добавить нового читателя</a>
    <a asp-page="/CardPages/Index" class="text-decoration-none btn btn-outline-dark">Карточка читателя</a>
</p>


<table class="table">
    <thead>
        <tr>
          @*  <th>
                @Html.DisplayNameFor(model => model.Reader[0].IsDeleted)
            </th>*@
            <th>
                Фамилия
            </th>
            <th>
               Имя
            </th>
            <th>
                Отчество
            </th>
            <th>
               Логин
            </th>
            <th>
                Пароль
            </th>
            <th>
                Паспорт
            </th>
            <th>
               Телефон
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader[0].CardReaderId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reader) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Middle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardReaderId)
            </td>
            <td>
                <a asp-page="./Edit" class="text-decoration-none btn btn-outline-success" asp-route-id="@item.Id">Изменить</a> 
                <a asp-page="./Delete" class="text-decoration-none btn btn-outline-danger" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
