@page
@model Library.Pages.ReaderPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить читателя</h1>

<h3>Вы уверены, что хотите удалить?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reader.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.IsDeleted)
        </dd>
        <dt class="col-sm-2">
            Фамилия
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.LastName)
        </dd>
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.FirstName)
        </dd>
        <dt class="col-sm-2">
            Фамилия
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.Middle)
        </dd>
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.Login)
        </dd>
        <dt class="col-sm-2">
            Пароль
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.Password)
        </dd>
        <dt class="col-sm-2">
            Паспорт
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.Passport)
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reader.CardReaderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reader.CardReaderId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reader.Id" />
        <input type="submit" value="Удалить" class="text-decoration-none btn btn-outline-danger mt-31" />
        <a asp-page="./Index" class="text-decoration-none btn btn-outline-dark mt-3">Назад</a>
    </form>
</div>
