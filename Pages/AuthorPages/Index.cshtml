@page
@model Library.Pages.AuthorPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Авторы</h1>

<p>
    <a asp-page="Create" class="text-decoration-none btn btn-outline-dark">Добавить нового автора</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Author[0].IsDeleted)
            </th>*@
            <th>
               Фамилия
            </th>
            <th>
                Имя
            </th>
            <th>
               Отчество
            </th>
            <th>
                Дата рождения
            </th>
            <th>
               Дата смерти
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Author) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Middle)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirthAsString)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DateOfDeathAsString)
            </td>
            <td>
                <a asp-page="./Edit" class="text-decoration-none btn btn-outline-success" asp-route-id="@item.Id">Изменить</a> 
                <a asp-page="./Details" class="text-decoration-none btn btn-outline-primary" asp-route-id="@item.Id">Подробно</a> 
                <a asp-page="./Delete" class="text-decoration-none btn btn-outline-danger" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
