@page
@model Library.Pages.AuthorPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменения</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Author.Id" />
            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Author.IsDeleted" /> @Html.DisplayNameFor(model => model.Author.IsDeleted)
                </label>
            </div>*@
            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label">Фамилия</label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label">Имя</label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Middle" class="control-label">Отчество</label>
                <input asp-for="Author.Middle" class="form-control" />
                <span asp-validation-for="Author.Middle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.DateOfBirth" class="control-label">Дата рождения</label>
                <input asp-for="Author.DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="Author.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.DateOfDeath" class="control-label">Дата смерти</label>
                <input asp-for="Author.DateOfDeath" type="date" class="form-control" />
                <span asp-validation-for="Author.DateOfDeath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-primary mt-3" />
                <a asp-page="./Index" class="text-decoration-none btn btn-outline-dark mt-3">Назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
