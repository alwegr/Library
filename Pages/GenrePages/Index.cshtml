@page
@model Library.Pages.GenrePages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Жанры</h1>

<p>
    <a asp-page="Create" class="text-decoration-none btn btn-outline-dark">Добавить новый жанр</a>
    <a asp-page="/BookPages/Index" class="text-decoration-none btn btn-outline-dark">Назад</a>
</p>
<table class="table">
    <thead>
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.Genre[0].IsDeleted)
            </th>*@
            <th>
               Название
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Genre) {
        <tr>
           @* <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-page="./Edit" class="text-decoration-none btn btn-outline-success" asp-route-id="@item.Id">Изменить</a> 
                    <a asp-page="./Details" class="text-decoration-none btn btn-outline-primary" asp-route-id="@item.Id">Подробно</a> 
                    <a asp-page="./Delete" class="text-decoration-none btn btn-outline-danger" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
